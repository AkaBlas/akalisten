<!DOCTYPE html>
<html lang="de">
<head>
    <title>Muckenlisten</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="initial-scale = 1.0,maximum-scale = 1.0">
    <style>
        {% include 'style.css' %}
    </style>
</head>
<body>
    <h1>Muckenlisten<br><small class="icon-text"><i data-lucide="construction" class="lucide-icon"></i> <i>Zweiter, überarbeiteter Entwurf</i></small></h1>
    <p class="icon-text"><i data-lucide="github" class="lucide-icon lg"></i> <a href="https://github.com/AkaBlas/akalisten/issues">Eingegangene Verbesserungsvorschläge</a></p>
    <div class="intro">
        <header>
            {# <button class="settings-btn">⚙️ Einstellungen</button> #}
        </header>
        <h2>Aktuelle Mucken</h2>
    </div>
    <div class="mucken">
{% for poll in polls.values() %}
        <div class="accordion" data-state="closed">
            <button class="accordion-header" aria-expanded="false" aria-controls="mucke-{{ poll.id }}">
                {{ poll.html_title }}
                <span class="accordion-icon"><i data-lucide="chevron-down" class="lucide-icon lg"></i></span>
            </button>
            <div class="accordion-content mucke" id="mucke-{{ poll.id }}" hidden>
                {% if poll.url %}
                    <div class="entry-link icon-text">
                        <i data-lucide="link" class="lucide-icon"></i>
                        <a href="{{ poll.url }}" target="_blank" rel="noopener noreferrer">Hier zur Mucke eintragen</a>
                    </div>
                {%  endif %}
                {% if poll.mucken_info.has_any_info or poll.mucken_info.additional %}
                    <div class="accordion" data-state="closed">
                        <button class="accordion-header" aria-expanded="false" aria-controls="mucke-{{ poll.id }}-infos">
                            Mucken-Infos
                            <span class="accordion-icon"><i data-lucide="chevron-down" class="lucide-icon lg"></i></span>
                        </button>
                        <div class="accordion-content mucken-infos" id="mucke-{{ poll.id }}-infos" hidden>
                            {% if poll.mucken_info.has_any_info %}
                                <ul class="multi-column-list">
                                    {% from 'info_block.j2' import render_info %}
                                    {% if poll.mucken_info.date %}
                                       {{ render_info('calendar-fold', poll.mucken_info.date.strftime('%d.%m.%Y')) }}
                                    {% endif %}
                                    {% if poll.mucken_info.location %}
                                        {{ render_info('map-pin', poll.mucken_info.location) }}
                                    {% endif %}
                                    {% if poll.mucken_info.time_m2 %}
                                        {{ render_info('truck', "Mensa 2: " + poll.mucken_info.time_m2.strftime('%H:%M') + " Uhr") }}
                                    {% endif %}
                                    {% if poll.mucken_info.time_meeting %}
                                        {{ render_info('clock', "Direkt: " + poll.mucken_info.time_meeting.strftime('%H:%M') + " Uhr") }}
                                    {% endif %}
                                    {% if poll.mucken_info.time_start %}
                                        {{ render_info('volume-2', "Start: " + poll.mucken_info.time_start.strftime('%H:%M') + " Uhr") }}
                                    {% endif %}
                                    {% if poll.mucken_info.time_end %}
                                        {{ render_info('volume-x', "Ende: " + poll.mucken_info.time_end.strftime('%H:%M') + " Uhr") }}
                                    {% endif %}
                                </ul>
                            {% endif %}
                            {% if poll.mucken_info.additional %}
                                <p class="icon-text">
                                    <i data-lucide="info" class="lucide-icon lg"></i>
                                    <b>Zusätzliche Informationen:</b>
                                    {{ poll.mucken_info.html_additional }}
                                </p>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}

                <div class="filters">
                    <div class="participant-filter">
                        <label>Filter:</label>
                        <button class="filter-btn all active" data-filter="all">Alle</button>
                        <button class="filter-btn yes" data-filter="yes">Ja</button>
                        <button class="filter-btn no" data-filter="no">Nein</button>
                        <button class="filter-btn maybe" data-filter="maybe">Vielleicht</button>
                    </div>
                    <div class="category-filter">
                        <label for="category-select-{{ poll.id }}">Kategorie:</label>
                        <select class="category-select" id="category-select-{{ poll.id }}">
                            <option value="all">Alle</option>
                            {% for option, votes in poll_votes[poll.id].options.items() %}
                                <option value="{{ option }}">{{ option }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="participants">
                    <div class="column yes">
                        <h2>Ja</h2>
                        {% from 'option_block.j2' import render_category %}
                        {% for option, votes in poll_votes[poll.id].options.items() %}
                            {{ render_category(option, votes, 'sorted_yes') }}
                        {% endfor %}
                    </div>
                    <div class="column no">
                        <h2>Nein</h2>
                        {% for option, votes in poll_votes[poll.id].options.items() %}
                            {% if votes.sorted_no() %}
                            <div class="category" data-category="{{ option }}">
                                <div class="category-name">{{ option }}</div>
                                <ul>
                                    {% for user in votes.sorted_no() %}
                                        {% if not (poll_votes[poll.id].users[user.id].yes or poll_votes[poll.id].users[user.id].maybe) %}
                                            <li data-user-id="{{ user.id }}">{{ user.html_display_name }}</li>
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                            </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="column maybe">
                        <h2>Vielleicht</h2>
                        {% for option, votes in poll_votes[poll.id].options.items() %}
                            {{ render_category(option, votes, 'sorted_maybe') }}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
{% endfor %}
    </div>
     <footer>
         <div>
            <p class="icon-text"><i data-lucide="database-backup" class="lucide-icon"></i>Zuletzt aktualisiert: {{ now.strftime("%d.%m.%Y %H:%M:%S") }}</p>
            <p class="icon-text">Mit<i data-lucide="heart-handshake" class="lucide-icon"></i>gebaut von Hirsch und Henry</p>
         </div>
     </footer>
{% include 'icons_script.j2' %}
{% include 'script.j2' %}
</body>
</html>
