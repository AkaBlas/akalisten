{% macro render_info(icon_name, text) %}
    <div class="col mb-2">
        <div class="input-group">
            <span class="input-group-text p-1">
                <i class="bi bi-{{ icon_name }} fs-5 mx-2"></i>
            </span>
            <input type="text" class="form-control form-control-sm" value="{{ text }}" readonly
                   disabled>
        </div>
    </div>
{% endmacro %}