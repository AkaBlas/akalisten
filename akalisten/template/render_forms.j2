{% macro render_forms(forms) %}
<div class="row g-4">
    {% for form in forms %}
        {% set desc_len = form.html_description|length if form.html_description is defined and form.html_description else 0 %}
        {% if desc_len > 600 %}
            {% set col_class = "col-12 col-md-12 col-lg-12" %}
        {% elif desc_len > 300 %}
            {% set col_class = "col-12 col-md-6 col-lg-6" %}
        {% else %}
            {% set col_class = "col-12 col-md-6 col-lg-4" %}
        {% endif %}
        <div class="{{ col_class }}">
            <div class="card h-100 mb-3">
                <div class="card-header">
                    {{ form.html_title }}
                </div>
                <div class="card-body d-flex flex-column">
                    <div>
                        {% if form.expire_date %}
                            <p class="mb-2">
                                <span class="d-flex align-items-center">
                                    <i class="bi bi-calendar-week me-2"></i>
                                    <b>Formular offen bis:</b>&nbsp;{{ form.expire_date.strftime('%d.%m.%Y %H:%M') }} Uhr
                                </span>
                            </p>
                        {% endif %}
                        {% if form.html_description %}
                            <p class="card-text mb-0">
                                {{ form.html_description }}
                            </p>
                        {% endif %}
                    </div>
                    <div class="mt-auto d-flex flex-column gap-2">
                        {% if form.url %}
                            <a href="{{ form.url }}" target="_blank" rel="noopener noreferrer"
                               class="btn btn-outline-success d-flex align-items-center text-start">
                                <i class="bi bi-cloud-check me-2"></i>
                                Ausfüllen mit AkaCloud-Account
                            </a>
                        {% endif %}
                        {% if form.public_url %}
                            <a href="{{ form.public_url }}" target="_blank" rel="noopener noreferrer"
                               class="btn btn-outline-primary d-flex align-items-center text-start">
                                <i class="bi bi-pencil-fill me-2"></i>
                                Ausfüllen ohne AkaCloud-Account
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% if form.embed_url %}
                <div class="card mt-3">
                    <div class="card-header">
                        <span class="d-flex align-items-center">
                            <i class="bi bi-pencil-square me-2"></i>
                            Ohne AkaCloud-Account direkt ausfüllen
                        </span>
                    </div>
                    <div class="card-body">
                        <iframe src="{{ form.embed_url }}" width="100%" height="800px"
                                class="embedding-content"></iframe>
                    </div>
                </div>
            {% endif %}
        </div>
    {% endfor %}
</div>
{% endmacro %}