{% from 'render_forms.j2' import render_forms %}
{% from 'render_links.j2' import render_links %}
{% from 'render_lists.j2' import render_lists %}
{% from 'render_muckenlisten.j2' import render_muckenlisten %}
{% from 'render_polls.j2' import render_polls %}
<!DOCTYPE html>
<html lang="de" class="h-100" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AkaListen</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Custom scripts for this template -->
    <script>
        {% include 'layout-script.js' %}
    </script>
    <!-- Custom styles -->
    <style>
        {% include 'layout-styles.css' %}
    </style>
</head>
<body class="d-flex flex-column h-100">

<header>
    <!-- Fixed navbar -->
    <nav id="nav-bar" class="navbar navbar-expand-md fixed-top custom-navbar bg-body-tertiary">
        <div class="container-fluid mx-3">
            <a class="navbar-brand" href="#">AkaListen</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarCollapse" aria-controls="navbarCollapse"
                    aria-expanded="false" aria-label="Navigation umschalten">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <!-- Theme Switcher Dropdown -->
                <hr class="d-md-none my-2 text-body-tertiary">
                <div class="dropdown ms-md-auto">
                    <button class="btn btn-link nav-link px-lg-2 py-2 dropdown-toggle d-flex align-items-center"
                            id="bd-theme"
                            type="button"
                            data-bs-toggle="dropdown" aria-expanded="false"
                            aria-label="Farbschema (hell/dunkel/auto)">
                        <i class="bi bi-circle-half theme-icon-active"></i>
                        <span id="bd-theme-text" class="ms-2"></span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end shadow">
                        <li>
                            <button type="button" class="dropdown-item d-flex align-items-center"
                                    data-bs-theme-value="light">
                                <i class="bi bi-sun-fill me-2"></i>
                                Hell
                            </button>
                        </li>
                        <li>
                            <button type="button" class="dropdown-item d-flex align-items-center"
                                    data-bs-theme-value="dark">
                                <i class="bi bi-moon-stars-fill me-2"></i>
                                Dunkel
                            </button>
                        </li>
                        <li>
                            <button type="button"
                                    class="dropdown-item d-flex align-items-center active"
                                    data-bs-theme-value="auto">
                                <i class="bi bi-circle-half me-2"></i>
                                Automatisch
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>

<main class="flex-shrink-0 py-4">
    <div class="container">
        <h2>Aktuelle Formulare</h2>
        <hr class="mt-3 mb-4 text-body-secondary">
        {% if lists %}
            {{ render_forms(forms) }}
        {% else %}
            <div class="alert alert-info d-flex align-items-center" role="alert">
                <i class="bi bi-search me-3 me-lg-4 fs-4"></i>
                <div>
                    <strong>Keine Formulare gefunden.</strong><br>
                    Falls Du hier ein Formular vermisst, melde Dich gerne!
                    <br>
                    <a href="mailto:webmaster@akablas.de"
                       class="btn btn-outline-primary btn-sm mt-2">
                        <i class="bi bi-envelope-at me-1"></i> Formular melden
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
    <div class="container">
        <h2>Aktuelle andere Listen</h2>
        <hr class="mt-3 mb-4 text-body-secondary">
        {% if lists %}
            {{ render_lists(lists) }}
        {% else %}
            <div class="alert alert-info d-flex align-items-center" role="alert">
                <i class="bi bi-search me-3 me-lg-4 fs-4"></i>
                <div>
                    <strong>Keine Listen gefunden.</strong><br>
                    Falls Du hier eine Liste vermisst, melde Dich gerne!
                    <br>
                    <a href="mailto:webmaster@akablas.de"
                       class="btn btn-outline-primary btn-sm mt-2">
                        <i class="bi bi-envelope-at me-1"></i> Liste melden
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
    {% if links %}
        <div class="container mb-3">
            <h2 class="mb-3 mt-5">Link-Sammlung</h2>
            <hr class="mb-4 text-body-secondary">
            {{ render_links(links) }}
        </div>
    {% endif %}
</main>

<footer class="footer mt-auto py-3 bg-body-tertiary text-body-secondary">
    <div class="container">
        <div class="row row-cols-1 row-cols-lg-2 g-4 align-items-lg-center">
            <div class="col">
                <div class="d-flex flex-column flex-lg-row gap-3">
                    <div class="w-75">
                        <span class="d-flex align-items-start">
                            <i class="bi bi-database-gear me-2 fs-6"></i>
                            <span>Zuletzt aktualisiert:<br>{{ now.strftime("%d.%m.%Y %H:%M:%S") }}</span>
                        </span>
                    </div>
                    <div class="flex-shrink-1">
                        <span class="d-flex align-items-start">
                            <i class="bi bi-fingerprint me-2 fs-6"></i>
                            <span>
                                Diese Seite nutzt
                                <a href="https://de.wikipedia.org/wiki/Web_Storage#localStorage">Labskauspetties</a>.
                                Das sind quasi DSGVO-konforme Cookies. Lecker!
                            </span>
                        </span>
                    </div>
                    <div class="w-75">
                        <span class="d-flex align-items-start">
                            <i class="bi bi-code-slash me-2 fs-6"></i>
                            <span class="icon-text">
                                 Mit <i class="bi bi-suit-heart-fill fs-6"></i> gebaut von Hirsch und Henry
                             </span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="d-flex flex-column gap-2 align-items-start align-items-lg-end">
                    <a href="mailto:webmaster@akablas.de"
                       class="btn btn-secondary btn-sm">
                        <span class="text-nowrap">
                            <i class="bi bi-envelope-at me-1"></i>Verbesserungsvorschl√§ge
                        </span>
                    </a>
                    <a href="https://github.com/AkaBlas/akalisten"
                       class="btn btn-secondary btn-sm" target="_blank" rel="noopener">
                        <span class="text-nowrap">
                            <i class="bi bi-github me-1"></i>Quellcode
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>
</html>
